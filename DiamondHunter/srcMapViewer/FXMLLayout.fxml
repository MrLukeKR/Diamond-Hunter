<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="800.0" prefWidth="1060.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MainController">
   <children>
      <BorderPane prefHeight="800.0" prefWidth="1060.0">
         <left>
            <FlowPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <TitledPane animated="false" collapsible="false" prefHeight="264.0" prefWidth="400.0" text="Tileset">
                     <content>
                        <ImageView fx:id="tilesetImageViewer" fitHeight="250.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true" />
                     </content>
                  </TitledPane>
                  <TitledPane animated="false" collapsible="false" prefHeight="120.0" prefWidth="400.0" text="Tiles">
                     <content>
                        <ScrollPane hbarPolicy="ALWAYS" prefHeight="200.0" prefWidth="200.0">
                           <content>
                              <VBox prefHeight="80.0" prefWidth="400.0">
                                 <children>
                                    <HBox fx:id="normalTiles" prefHeight="100.0" prefWidth="200.0" />
                                    <HBox fx:id="blockedTiles" prefHeight="100.0" prefWidth="200.0" />
                                 </children>
                              </VBox>
                           </content>
                        </ScrollPane>
                     </content>
                  </TitledPane>
                  <TitledPane animated="false" collapsible="false" prefHeight="120.0" prefWidth="400.0" text="Items">
                     <content>
                        <ScrollPane hbarPolicy="ALWAYS" prefHeight="102.0" prefWidth="398.0">
                           <content>
                              <VBox prefHeight="80.0" prefWidth="400.0">
                                 <children>
                                    <HBox fx:id="normalTiles1" prefHeight="100.0" prefWidth="200.0" />
                                    <HBox fx:id="blockedTiles1" prefHeight="100.0" prefWidth="200.0" />
                                 </children>
                              </VBox>
                           </content>
                        </ScrollPane>
                     </content>
                  </TitledPane>
               </children>
            </FlowPane>
         </left>
         <top>
            <MenuBar BorderPane.alignment="CENTER">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                        <MenuItem fx:id="loadTilesetButton" mnemonicParsing="false" onAction="#handleLoadingTileset" text="Open Tileset" />
                        <MenuItem fx:id="loadMapButton" disable="true" mnemonicParsing="false" onAction="#handleLoadingMap" text="Open Map" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem fx:id="saveTilesetButton" disable="true" mnemonicParsing="false" text="Save Tileset" />
                        <MenuItem fx:id="saveMapButton" disable="true" mnemonicParsing="false" text="Save Map" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                    <MenuItem fx:id="closeButton" mnemonicParsing="false" text="Close" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </top>
         <center>
            <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <TitledPane animated="false" collapsible="false" prefHeight="676.0" prefWidth="660.0" text="Map Editor">
                     <content>
                        <ScrollPane prefHeight="576.0" prefWidth="658.0">
                           <content>
                              <GridPane fx:id="mapGrid" alignment="CENTER" gridLinesVisible="true" prefHeight="650.0" prefWidth="650.0">
                                <rowConstraints>
                                  <RowConstraints fillHeight="false" valignment="CENTER" vgrow="NEVER" />
                                </rowConstraints>
                                 <columnConstraints>
                                    <ColumnConstraints />
                                 </columnConstraints>
                              </GridPane>
                           </content>
                        </ScrollPane>
                     </content>
                  </TitledPane>
                  <TitledPane animated="false" collapsible="false" prefHeight="100.0" prefWidth="660.0" text="Information">
                     <content>
                        <GridPane>
                          <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="313.0" minWidth="10.0" prefWidth="77.0" />
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="597.0" minWidth="10.0" prefWidth="561.0" />
                          </columnConstraints>
                          <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                          </rowConstraints>
                           <children>
                              <Label text="Position" />
                              <Label text="Tile Type" GridPane.rowIndex="1" />
                              <Label fx:id="coordLabel" text="X: 0, Y: 0" GridPane.columnIndex="1" />
                              <Label fx:id="blockedLabel" text="Blocked/Unblocked" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                           </children>
                        </GridPane>
                     </content></TitledPane>
               </children>
            </VBox>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
